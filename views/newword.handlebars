<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Word:</h3>

    <form class="form new-word-form">
      <div class="form-group">
        <label for="word-title">Word:</label>
        <input class="form-input" placeholder="Add a word" type="text" id="word-title" name="word-title" />
      </div>
      <div class="form-group">
        <label for="word-desc">description:</label>
        <textarea class="form-input" placeholder="Add a definition" id="word-desc" name="word-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <script src="./js/newword.js"></script>